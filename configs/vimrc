syntax on
set cc=100
colorscheme default

set backspace=indent,eol,start
set mouse=a
set hlsearch
set incsearch
set number
set ruler
set nowrap
set scrolloff=10
"let g:mapleader="รง"

set autoindent
set noexpandtab    " disable converting between tabs and spaces
set softtabstop=-1 " for when deleting (-1 to follow shiftwidth)
set shiftwidth=0   " for autoindent (0 to follow tabstop)
set tabstop=2      " how many spaces to view a tab as

" windows
nnoremap <leader>j <C-W>j
nnoremap <leader>k <C-W>k
nnoremap <leader>h <C-W>h
nnoremap <leader>l <C-W>l
nnoremap <leader>+ 10<C-W>+
nnoremap <leader>- 10<C-W>-
nnoremap <leader>> 10<C-W>>
nnoremap <leader>< 10<C-W><
nnoremap <leader>ยบ <C-W>=
nnoremap <leader><leader> <C-W>p

" buffers
set switchbuf+=useopen
nnoremap <leader>n :sbn<CR>
nnoremap <leader>pp :sbp<CR>
nnoremap <leader>a :sb#<CR>
